{
  "env": {
    "browser": true,
    "jquery": true
  },
  "extends": ["airbnb-base/legacy", "prettier"],
  "parser": "babel-eslint",
  "plugins": ["babel"],
  "rules": {
    "max-len": [
      "error",
      {
        "code": 120,
        "ignoreUrls": true
      }
    ],
    "no-caller": ["warn"],
    "no-redeclare": ["warn"],
    "no-param-reassign": ["warn"],
    "no-plusplus": ["error"],
    "no-template-curly-in-string": ["off"],
    "no-use-before-define": ["warn"],
    "no-unused-vars": ["warn"],
    "no-useless-concat": ["off"],
    "no-undef": ["warn"],
    "spaced-comment": [
      "warn",
      "always",
      {
        "exceptions": ["-", "+"],
        "markers": ["=", "!"]
      }
    ],
    "vars-on-top": ["warn"]
  }
}
