# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
# editorconfig-tools is unable to ignore longs strings or urls
# max_line_length = null

[*.php]
indent_size = 2

[package.json]
indent_size = 2

[{*.diff,*.md,*.patch}]
trim_trailing_whitespace = false
